doctype html
html
  head
    title #{title}
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous")
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
      .container
        a.navbar-brand(href='/') 首頁
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link(aria-current='page' href='/user') 使用者
            li.nav-item
              a.nav-link(href='/login') 登入
            li.nav-item
              a.nav-link(href='/login/signup') 註冊
    .container
      block content
      br
      if success&&success.length > 0
        .alert.alert-info.alert-dismissible.fade.show(role='alert')
          |  #{success}
          button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
      if errors&&errors.length > 0
        .alert.alert-warning.alert-dismissible.fade.show(role='alert')
          |  #{errors}
          button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
      if tryagain
        each message, i in tryagain
          .alert.alert-warning.alert-dismissible.fade.show(role='alert')
            |  #{message.msg}
            button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
      hr
      footer.text-center
        p.mt-5.mb-3.text-muted Copyright ©2021
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous")